import rclpy
from h1_webserver.librosnode import ROS2WebServer
from h1_webserver.libroscustom import ROS2CustomWebInterface

def launch_webserver(args=None):

    rclpy.init(args=args)
    
    ros2_webserver = ROS2WebServer()
    ros2_custom_interface = ROS2CustomWebInterface(ros2_webserver)

    try:
        rclpy.spin(ros2_webserver)
    except KeyboardInterrupt:
        ros2_webserver.get_logger().info('Web server stopped by user.')
    finally:
        ros2_webserver.destroy_node()

if __name__ == '__main__':
    launch_webserver()
